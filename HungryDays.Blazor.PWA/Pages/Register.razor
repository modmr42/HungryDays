@page "/register"

<section class="position-relative py-4 py-xl-5">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-6 col-sm-6 col-md-5 col-lg-3 col-xl-2 col-xxl-2"><img src="ridder_alarmservice_logo.svg" style="background: var(--bs-white);" /></div>
        </div>
        <div class="row">
            <div class="col-md-8 col-xl-6 text-center mx-auto">
                <div class="alert alert-success" role="alert"><span><strong>Alert</strong> text.</span></div>
            </div>
        </div>
        <div class="row d-flex justify-content-center">
            <div class="col-12 col-sm-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card bg-dark mb-5">
                    <div class="card-body d-flex flex-column align-items-center">
                        <div class="bs-icon-xl bs-icon-circle text-success bs-icon my-4"><svg class="bi bi-person" xmlns="http://www.w3.org/2000/svg" width="3em"  fill="currentColor" viewBox="0 0 16 16">
                                <path d="M8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6Zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0Zm4 8c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4Zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10Z"></path>
                            </svg></div>
                        <form class="text-center col-12 col-sm-12 col-md-12 col-lg-5 col-xl-5 col-xxl-5" method="post">
                            <div class="mb-3"><input class="form-control" type="text" name="name" placeholder="Name" /></div>
                            <div class="mb-3"><input class="form-control" type="email" name="email" placeholder="Email" /></div>
                            <div class="mb-3"><input class="form-control" type="password" name="password" placeholder="Password" /></div>
                            <div class="mb-3"><button class="btn btn-success d-block w-100" type="submit" >Login</button></div>
                            <a href="/register" class="text-muted">Already have an account?</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

