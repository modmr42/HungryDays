<input class="form-range form-control" type="range" min="@Min" max="@Max" step="@Step" value="@Value" @oninput="ValueChanged"/>


@code{
    [Parameter]
    public int Min { get; set; }

    [Parameter]
    public int Max { get; set; }

    [Parameter]
    public int Step { get; set; }

   [Parameter]
   public string Value { get; set; }

   [Parameter]
   public EventCallback<ChangeEventArgs> ValueChanged { get; set; }

}