@{
    Layout = "_SubLayout";
}

@model List<HungryDay>;

<h1>Index page</h1>
<hr />
@section ContentLeft 
{
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-success mb-2">
        <div class="row">
                <div class="col-md-12"><i class="bi bi-arrow-left" style="font-size: 1rem;"></i></div>
                <div class="col-md-12">Go back</div>
        </div>
    </a>
    <a asp-controller="Group" asp-action="Create" class="btn btn-outline-warning mb-2">
        <div class="row">
                <div class="col-md-12"><i class="bi bi-pencil" style="font-size: 1rem;"></i></div>
                <div class="col-md-12">Create</div>
        </div>
    </a>
}

@section ContentRight 
{
    <div class="row">
    @foreach(var day in Model)
    {
    <div class="col-md-6" >
        <a asp-controller="Hungry" asp-action="Detail" asp-route-id="@day.Id" style="color: inherit; text-decoration: none;">
        <div class="card mb-3" >
            <div class="card-body">
            <h5 class="card-title">@day.Name</h5>

            <div class="input-group flex-nowrap">
                <span class="input-group-text">Diner</span>
                <input type="text" class="form-control" value="@day.Diner" disabled>
            </div>

                    @foreach(var item in day.Items)
                    {
                        <div class="input-group">
                            <div class="input-group-text">
                                @if(item.Bought)
                                {
                                <input class="form-check-input mt-0" type="checkbox" checked >
                                }
                                else
                                {
                                <input class="form-check-input mt-0" type="checkbox" >
                                }
                            </div>
                            <input type="text" class="form-control" value="@item.Name" disabled>
                        </div>

                    }
            </div>
        </div>
        </a>
    </div>
    }
    </div>
}
